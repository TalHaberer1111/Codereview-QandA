{{#if newAnswerForm}}
<div class="new-answer">

<form>
  <div class="form-group">
    {{input value=question id="question"}}
  </div>

  <div class="form-group">
    {{input value=author id="author"}}
  </div>

  <div class="form-group">
    {{input value=content id="content"}}
  </div>
  <button {{action 'saveAnswer'}}>Answer</button>
</form>
</div>

{{else}}
<button {{action 'showAddAnswerForm'}}>New answer</button>
{{/if}}
